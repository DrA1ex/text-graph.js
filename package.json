{
  "name": "text-graph.js",
  "version": "1.1.0",
  "main": "index.js",
  "type": "module",
  "author": "DrA1ex",
  "description": "A versatile JavaScript library for creating ASCII charts in the terminal and browser console",
  "repository": {
    "type": "git",
    "url": "https://github.com/DrA1ex/text-graph.js.git"
  },
  "homepage": "https://github.com/DrA1ex/text-graph.js",
  "keywords": [
    "ascii-chart",
    "terminal-chart",
    "console-chart",
    "browser-chart",
